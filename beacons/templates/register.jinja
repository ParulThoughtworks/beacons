{% extends "base.jinja" %}
{% from "_formhelpers.jinja" import render_field %}

{% block title %}
    Register
{% endblock %}

{% block content %}
    <legend><h1>
        Register Beacon
    </h1></legend>
    <br>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <form class="form-horizontal" action="{{ url_for('portal.register_beacons') }}" method="post">
                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Advertised ID:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.advertised_id) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3">Status:</label>
                    <div class="col-xs-5">
                        {{ render_field(form.status) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3">Type:</label>
                    <div class="col-xs-5">
                        {{ render_field(form.beacon_type) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Description:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.description) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Indoor Level Name:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.indoorlevel_name) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Lattitude:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.lattitude) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Longitude:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.longitude) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Expected Stability:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.expected_stability) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Position:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.position) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Place ID:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.place_id) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Accept Details:</label>
                    <div class="col-xs-7">
                        {{ render_field(form.accept_details) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-offset-4 col-xs-8">
                        <input type="submit" class="btn btn-success" value="Submit">
                        <input type="reset" class="btn btn-danger" value="Reset">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div></div>
    </div>
{% endblock %}